{
	"title": "JSON schema for couch-schema schema files",
	"$schema": "http://json-schema.org/schema",
	"id": "https://json.schemastore.org/tsconfig",
	"type": "object",
	"definitions": {
		"fieldShortcuts": {
			"enum": [
				"string",
				"optstring",
				"boolean",
				"optboolean",
				"number",
				"date",
				"datetime",
				"timestamp",
				"buffer",
				"link"
			]
		},
		"fieldTypes": {
			"enum": [
				"string",
				"boolean",
				"number",
				"date",
				"datetime",
				"timestamp",
				"buffer",
				"link",
				"subschema",
				"calculated"
			]
		},
		"fieldTypeDefiniton": {
			"description": "Definitions for all the fields in the schema",
			"oneOf": [
				{
					"$ref": "#/definitions/fieldShortcuts"
				},
				{
					"$ref": "#/definitions/fieldDefinition"
				},
				{
					"$ref": "#/definitions/fieldDefinitionArray"
				}
			]
		},
		"fieldDefinition": {
			"type": "object",
			"required": [
				"type"
			],
			"additionalProperties": false,
			"properties": {
				"type": {
					"$ref": "#/definitions/fieldTypes"
				},
				"validate": {
					"type": "string"
				},
				"validateFailMsg": {
					"type": "string"
				},
				"required": {
					"type": "boolean"
				},
				"default": {
					"type": [
						"array",
						"boolean",
						"integer",
						"number",
						"null",
						"string"
					]
				},
				"min": {
					"type": "number"
				},
				"max": {
					"type": "number"
				},
				"values": {
					"type": "string"
				},
				"calculator": {
					"type": "string"
				},
				"calculatedType": {
					"type": "string"
				},
				"schema": {
					"type": "string",
					"pattern": "^([A-Za-z])+[A-Za-z0-9]*$"
				},
				"formatter": {
					"type": "string"
				}
			}
		},
		"fieldDefinitionArray": {
			"type": "array",
			"minItems": 1,
			"maxItems": 1,
			"items": {
				"$ref": "#/definitions/fieldDefinition"
			}
		}
	},
	"required": [
		"name",
		"version",
		"fields"
	],
	"properties": {
		"name": {
			"description": "The name of the schema",
			"type": "string",
			"minLength": 1,
			"maxLength": 254,
			"pattern": "^([A-Za-z])+[A-Za-z0-9]*$"
		},
		"version": {
			"description": "The version number of the schema. This should be incremented on each revision",
			"type": "number"
		},
		"fields": {
			"description": "Definitions for all the fields in the schema",
			"patternProperties": {
				"^([A-Za-z])+[A-Za-z0-9]*$": {
					"$ref": "#/definitions/fieldTypeDefiniton"
				}
			},
			"minProperties": 1,
			"additionalProperties": false
		}
	}
}